<html>
<head>
  <title><%= blagconf->title %></title>
  <link rel="stylesheet"  href="/style.css"
       type="text/css" 
       media="screen" 
       title="Style Sheet"
  />
</head>

<body>

<h2><%= blagconf->title %></h2>

<p><h4><%= blagconf->description %></h4></p>

<div>
<ul>
  % for my $post ($postlist->by_date->all) {
    <li>
      <b><a href="/post/<%= $post->id %>">
        <%= $post->topic %>
      </a></b>
      <br/>
      (<i class="postdate">dated <%= $post->date %>, 
       last edit <%= $post->last_edit %></i>)
    </li><br/>
  % }
</ul>
</div>

<div id="footer">
  <p>
    <i><%= blagconf->author %></i>
    :: <%== blagconf->contact %>
    :: <i>
        <a href="http://bitbucket.org/avenj/blagger">
          blagger <%= blagconf->version %>
        </a>
       </i>
  </p>
</div>

</body>
</html>
