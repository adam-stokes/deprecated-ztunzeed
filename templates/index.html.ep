<html>
<head>
  <title><%= blagconf->title %></title>
  <link rel="stylesheet"  href="/style.css"
       type="text/css" 
       media="screen" 
       title="Style Sheet"
  />
</head>

<body>

<h2><img src="http://www.gravatar.com/avatar/8c9c565991f088ac5b0886ef08712e5f.png" /><%= blagconf->title %></h2>

<p><h4><%= blagconf->description %></h4></p>

<div>
<ul>
  % for my $post ($postlist->by_date->all) {
    <li>
      <b><a href="/post/<%= $post->id %>">
        <%= $post->topic %>
      </a></b>
      <br/>
      <b><i class="postdate"><%= $post->date %></i></b>
      <br/>
      (<i class="postdate">last edit <b><%= $post->last_edit %></b></i>)
    </li><br/>
  % }
</ul>
</div>

<div id="footer">
  <p>
    <i><%= blagconf->author %></i>
    :: <%== blagconf->contact %>
    :: <i>
        <a href="https://github.com/battlemidget/blagger">
          blagger (patched) <%= blagconf->version %>
        </a>
       </i>
  </p>
</div>

</body>
</html>
